@model IEnumerable<ModelLayer.OrderModel>

@{
    ViewData["Title"] = "AllOrders";
}

<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">All Orders</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Index" asp-controller="OrderHistory" class="btn btn-primary">
            <i class="fas fa-plus"></i> &nbsp;Back
        </a>
    </div>
</div>

<br />
<br />


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerIdRef)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StoreIdRef)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductIdRef)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerIdRef)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StoreIdRef)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductIdRef)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td></td>
            </tr>
        }
    </tbody>
</table>
