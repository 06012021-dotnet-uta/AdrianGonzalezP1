@model IEnumerable<ModelLayer.StoreModel>

@{
    ViewData["Title"] = "Index";
}


<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">Availabe Stores</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
            <i class="fas fa-plus"></i> &nbsp; Home
        </a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StoreName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StoreName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td class="text-center">
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Shop" asp-route-Id="@item.StoreId" asp-action="Details" class="btn btn-primary mx-2">
                        <i class="fas fa-edit"> Detials</i>
                    </a>
                    <a asp-controller="Shop" asp-route-Id="@item.StoreId" asp-action="Products" class="btn btn-primary mx-2">
                        <i class="far fa-trash-alt">Product</i>
                    </a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>
